                            android:textSize="9sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/card5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/men_fashion_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/men_fashion_iv"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/men_fashion" />

                        <TextView
                            android:id="@+id/men_fashion_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/men_fashion"
                            android:textAlignment="center"
                            android:textSize="9sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/card5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/watch_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/watch_bag_iv"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/watches" />

                        <TextView
                            android:id="@+id/watch_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/watches_bags_jewelery"
                            android:textAlignment="center"
                            android:textSize="9sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/card5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/sports_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/sports_outdoor_iv"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="7dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/sport" />

                        <TextView
                            android:id="@+id/sports_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sports_outdoor"
                            android:textAlignment="center"
                            android:textSize="9sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/card5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/automotive_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/automotive_motorbike_iv"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="7dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/automotive" />

                        <TextView
                            android:id="@+id/automotive_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/automotive_motorbike"
                            android:textAlignment="center"
                            android:textSize="9sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

            <!--            <androidx.recyclerview.widget.RecyclerView-->
