<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/seller_about_container"
    tools:context=".Buyer.SellerAboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/lightGrey">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/seller_profile_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/seller_shop_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/seller_profile_image"
                android:fontFamily="@font/nunito_light"
                android:text="@string/seller_shop_name"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/seller_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seller_shop_name_txt"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/seller_profile_image"
                android:text="@string/seller_name"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/seller_ratting_bar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seller_name_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:numStars="5"
                android:progressTint="#DAA520"
                android:stepSize="1" />

            <TextView
                android:id="@+id/seller_ratting_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seller_name_txt"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@+id/seller_ratting_bar"
                android:text="@string/total_price_number" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/DimGray" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seller_level"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito_light"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/lightGrey">

                    <TextView
                        android:id="@+id/seller_level_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/seller_level"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seller_shop_category"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito_light"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/lightGrey">

                    <TextView
                        android:id="@+id/seller_shop_category_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/categories_name"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito_light"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/lightGrey">

                    <TextView
                        android:id="@+id/seller_shop_username_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/seller_username"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seller_shop_phone_no"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito_light"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/lightGrey">

                    <TextView
                        android:id="@+id/seller_shop_contact_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/seller_shop_phone_one"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seller_shop_email_txt"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito_light"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/lightGrey">

                    <TextView
                        android:id="@+id/seller_shop_email_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/seller_shop_email"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seller_shop_address"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito_light"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:background="@color/lightGrey">

                    <TextView
                        android:id="@+id/seller_shop_address_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/seller_shop_address"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/join_date"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito_light"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/lightGrey">

                    <TextView
                        android:id="@+id/seller_shop_member_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/join_date"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>