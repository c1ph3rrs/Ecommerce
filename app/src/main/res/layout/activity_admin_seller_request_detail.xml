<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.AdminSellerRequestDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/seller_request_detail_back_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admin_sellers_request"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/baloo"
            android:textSize="20sp"/>


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/seller_request_image_cv"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/profile" />

                <View
                    android:id="@+id/seller_image_divider"
                    android:layout_width="1dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/seller_request_image_cv"
                    android:background="@color/DimGray" />

                <TextView
                    android:id="@+id/seller_request_name_txt_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/seller_image_divider"
                    android:fontFamily="@font/baloo"
                    android:text="@string/seller_name"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/seller_request_shop_name_txt_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seller_request_name_txt_cv"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/seller_image_divider"
                    android:fontFamily="@font/baloo"
                    android:text="@string/seller_shop_name"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/seller_request_username_txt_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seller_request_shop_name_txt_cv"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/seller_image_divider"
                    android:fontFamily="@font/baloo"
                    android:text="@string/seller_username"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/seller_request_category_txt_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seller_request_username_txt_cv"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/seller_image_divider"
                    android:fontFamily="@font/baloo"
                    android:text="@string/seller_shop_category"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/seller_request_divider_two"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/seller_request_image_cv"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/DimGray" />

                <TextView
                    android:id="@+id/seller_request_email_txt_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seller_request_divider_two"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/baloo"
                    android:text="@string/seller_shop_email"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/seller_request_address_txt_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seller_request_email_txt_cv"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/baloo"
                    android:text="@string/shop_address"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/seller_request_phone_no_txt_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seller_request_address_txt_cv"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/baloo"
                    android:text="@string/seller_shop_phone_one"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/seller_request_divider_three"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/seller_request_phone_no_txt_cv"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/DimGray" />

                <TextView
                    android:id="@+id/seller_request_join_date_txt_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seller_request_divider_three"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/baloo"
                    android:text="@string/date"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/seller_request_licence_number_txt_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shop_licence"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/seller_request_divider_three"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/baloo"
                    android:textSize="14sp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/admin_seller_request_google_map_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/seller_request_licence_number_txt_cv"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="10dp"
                    android:padding="2dp"
                    app:cardCornerRadius="20dp">

                    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/admin_seller_request_map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/admin_seller_request_document_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/admin_seller_request_google_map_card_view"
                    android:layout_marginTop="20dp"
                    android:padding="15dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        android:background="@drawable/admin_category_layout_border"
                        android:padding="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/admin_seller_request_shop_document_IV"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:src="@drawable/insert_photo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/admin_seller_request_shop_document_IV"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/muli_black"
                            android:text="@string/shop_document_btn"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="center_horizontal" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        android:background="@drawable/admin_category_layout_border"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/admin_seller_request_shop_visiting_card_IV"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:src="@drawable/insert_photo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/admin_seller_request_shop_visiting_card_IV"
                            android:layout_centerInParent="true"
                            android:text="@string/shop_visiting_card"
                            android:fontFamily="@font/muli_black"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:gravity="center_horizontal" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/seller_request_id_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/admin_seller_request_document_layout"
                    android:padding="15dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        android:background="@drawable/admin_category_layout_border"
                        android:padding="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/admin_seller_request_owner_cnic_front_IV"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:src="@drawable/insert_photo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/admin_seller_request_owner_cnic_front_IV"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/muli_black"
                            android:text="@string/shop_owner_id_front"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="center_horizontal" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        android:background="@drawable/admin_category_layout_border"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/admin_seller_request_owner_cnic_back_IV"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:src="@drawable/insert_photo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/admin_seller_request_owner_cnic_back_IV"
                            android:layout_centerInParent="true"
                            android:text="@string/shop_owner_id_back"
                            android:fontFamily="@font/muli_black"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:gravity="center_horizontal" />

                    </RelativeLayout>

                </LinearLayout>


                <Button
                    android:id="@+id/seller_request_approve_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/approve_seller"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/black"
                    android:layout_below="@+id/seller_request_id_layout"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/seller_request_modification_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/modification_request"
                    android:background="@color/colorAccent"
                    android:textColor="@color/white"
                    android:layout_below="@+id/seller_request_approve_btn"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>