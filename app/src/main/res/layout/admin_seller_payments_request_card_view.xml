<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:elevation="5dp"
    android:padding="10dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/admin_seller_payment_request_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_light"
            android:text="@string/seller_username"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/admin_seller_payment_request_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admin_seller_payment_request_name_txt"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/nunito_light"
            android:text="@string/date"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/admin_seller_payment_request_price_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/nunito_light"
            android:text="@string/total_price"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>