<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="85dp"
    android:layout_height="140dp"
    android:layout_margin="5dp"
    android:padding="15dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/seller_special_offer_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/cart_icon" />

        <TextView
            android:id="@+id/seller_special_offer_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_light"
            android:singleLine="true"
            android:text="@string/category_product_name"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/seller_special_offer_seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seller_name"
            android:textSize="11sp"
            android:fontFamily="@font/nunito_light"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/seller_special_offer_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_price"
            android:textColor="@color/orange"
            android:textSize="11sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>