<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerDashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="7dp"
            android:background="@color/lightGrey">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/seller_profile_iv"
                android:layout_width="43dp"
                android:layout_height="43dp"
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp"
                android:src="@drawable/profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/baloo"
                android:text="@string/seller_dashboard"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/search_user_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/search_icon" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginBottom="50dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/seller_special_offers_btn"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@color/black"
                    android:elevation="5dp"
                    android:padding="10dp"
                    app:cardCornerRadius="7dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:src="@drawable/special_offer_icon"
                            android:layout_centerVertical="true"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/baloo"
                            android:text="@string/add_product_to_special_offer"
                            android:textColor="@color/white"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:textSize="24sp" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/seller_deal_icon"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@color/black"
                    android:elevation="5dp"
                    android:padding="10dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="7dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:text="@string/add_product_to_collection"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"/>

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:src="@drawable/collection_icon"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/seller_add_product_btn"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@color/black"
                    android:elevation="5dp"
                    android:padding="10dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="7dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:src="@drawable/product_icon"
                            android:layout_centerVertical="true"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/baloo"
                            android:text="@string/seller_new_product"
                            android:textColor="@color/white"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:textSize="24sp" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/seller_view_products_btn"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@color/black"
                    android:elevation="5dp"
                    android:padding="10dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="7dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:text="@string/seller_view_products"
                            android:textColor="@color/white"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:textSize="24sp" />


                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:src="@drawable/view_products_icon"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/seller_new_order_btn"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@color/black"
                    android:elevation="5dp"
                    android:padding="10dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="7dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:src="@drawable/cart_white"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/new_orders_number_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_price_number"
                            android:textColor="@color/orange"
                            android:textSize="15sp"
                            android:fontFamily="@font/baloo"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/baloo"
                            android:text="@string/new_orders"
                            android:textColor="@color/white"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:textSize="24sp" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/seller_earning_btn"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@color/black"
                    android:elevation="5dp"
                    android:padding="10dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="7dp"
                    android:layout_marginBottom="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black">


                        <TextView
                            android:id="@+id/seller_available_balance_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_price_number"
                            android:textColor="@color/orange"
                            android:textSize="15sp"
                            android:fontFamily="@font/baloo"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:text="@string/seller_earnings"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:src="@drawable/earnings_icon"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</FrameLayout>