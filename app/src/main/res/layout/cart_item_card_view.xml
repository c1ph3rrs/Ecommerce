<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="15dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cart_product_main_img"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:padding="3dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/product_icon"/>

        <TextView
            android:id="@+id/cart_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_price"
            android:layout_toRightOf="@+id/cart_product_main_img"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/baloo"/>

        <TextView
            android:id="@+id/cart_product_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_price"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/baloo"/>

        <TextView
            android:id="@+id/cart_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cv_item_description"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/cart_product_qty"
            android:singleLine="true"
            android:layout_toRightOf="@+id/cart_product_main_img"/>

        <ImageView
            android:id="@+id/cart_seller_profile_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/person_icon"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/cart_product_main_img"/>

        <TextView
            android:id="@+id/cart_product_seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_product_main_img"
            android:layout_toRightOf="@+id/cart_seller_profile_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/seller_name" />

        <TextView
            android:id="@+id/cart_product_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cart"
            android:layout_below="@+id/cart_product_main_img"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"/>

        <View
            android:id="@+id/cart_product_info_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/cart_product_seller_name"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/DimGray" />

        <TextView
            android:id="@+id/cart_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cart_date"
            android:layout_below="@+id/cart_product_info_divider"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/baloo"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/cart_product_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cart_date"
            android:layout_below="@+id/cart_product_info_divider"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/baloo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/cart_product_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_price"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/baloo"
            android:layout_below="@+id/cart_product_info_divider"/>

        <TextView
            android:id="@+id/cart_product_reject_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reject_order"
            android:layout_below="@+id/cart_product_total_price"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/baloo"
            android:visibility="gone"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>